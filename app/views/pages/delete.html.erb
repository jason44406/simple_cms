
<%= link_to("<< Back to Subjects", pages_path(:subject_id => @subject.id), :class => 'back-link') %>

<div class="pages delete">
  <h2>Delete Page</h2>
  <!-- Can leave the url out, but MUST specify action (delete in this case) -->
  <%= form_for(@page, :url => page_path(@page, :subject_id => @subject.id), :method => 'delete') do |f| %>

    <p> Are you SURE you want to permanently delete this page?</p>

    <p class="reference-name>"><strong><%= f.object.name %></strong></p>

    <div class="form-buttons">
      <%= f.submit("Delete Page") %>
    </div>

  <% end %>
</div>

<p><i>Find me in app/views/pages/delete.html.erb</i></p>
